{% extends "partials/base.twig" %}

{% block title %}Login{% endblock %}
{% block content %}
     <div class="login-body">
          <div class="login-container">
               <h1>Welcome, {{ data.thing }}</h1>
               <form class="login-page-form" action="login" method="post">
                    <label class="login-label" for="username">Username</label>
                    <input class="login-input" type="text" name="username"  placeholder="Username" required>
                    <label class="login-label" for="password">Password</label>
                    <input class="login-input" type="password" name="password"  placeholder="Password" required>
                    <input class="login-submit" type="submit">
               </form>
               {% if data.error %}
               <p class="wrong-login">Wrong username or password</p>
               {% endif %}
          </div>
     </div>

     
{% endblock %}
